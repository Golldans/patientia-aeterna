// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Order {
  id              Int       @id @default(autoincrement())
  price           Float
  address         String
  phone           Int
  clientName      String
  observation     String
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @default(now())
}